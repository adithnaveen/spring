<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-init-method="init" default-destroy-method="destroy">




	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location">
			<value>employee.properties</value>
		</property>
	</bean>
	<!-- to invoke post processor -->
	<bean id="emp" class="com.comviva03.postprocessing.Employee"
		autowire="byName">
		<property name="empId" value="${employee.id}" />
		<property name="email" value="${employee.email}" />
		<property name="salary" value="${employee.salary}" />
	</bean>
</beans>
